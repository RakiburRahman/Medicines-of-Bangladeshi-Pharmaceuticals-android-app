<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#0066CC"
    tools:context="com.example.sunny.medicinesofbangladeshipharmaceuticals.activity2">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="ACI Ltd."
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/aci"
            android:background="#000000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Beximco Pharmaceuticals Ltd	"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/beximco"
            android:background="#FF0000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Ibn Sina Pharmaceutical Ind. Ltd."
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/ibn"
            android:background="#000000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Square Pharmaceuticals Limited	"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/square"
            android:background="#FF0000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="About App Developer"
            android:textColor="#FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/developer"
            android:background="#000000"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="About Supervisor"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/supervisor"
            android:background="#FF0000"/>


    </LinearLayout>

</ScrollView>
